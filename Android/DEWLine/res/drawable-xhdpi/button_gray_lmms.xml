<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true" >
		<shape>
			<solid android:color="#dddbdb" />
			<stroke
				android:width="1dp"
				android:color="#a5a5a5" />
			<corners
				android:radius="3dp" />
			<padding
				android:left="10dp"
				android:top="1dp"
				android:right="10dp"
				android:bottom="1dp" />
		</shape>
	</item>
	<item>
		<shape>
			<gradient
				android:startColor="#dddbdb"
				android:endColor="#a5a5a5"
				android:angle="270" />
			<stroke
				android:width="1dp"
				android:color="#a5a5a5" />
			<corners
				android:radius="4dp" />
			<padding
				android:left="10dp"
				android:top="1dp"
				android:right="10dp"
				android:bottom="1dp" />
		</shape>
	</item>
</selector>
